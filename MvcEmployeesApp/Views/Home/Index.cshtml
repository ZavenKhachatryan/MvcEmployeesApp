@model MvcEmployeesApp.Models.IndexViewModel
@using MvcEmployeesApp
@{
    ViewBag.Title = "All Employees";
   
}

<form method="get" class="search-form">
    <div class="search-bar-with-label">
        <label class="search-label">Search By</label>
        <div class="search-bar">
            <select id="Employees" name="searchBy" class="mySelect custom-select mr-2">
                <option @(ViewBag.mod.SearchBy == "Id" ? "selected" : "") value="Id">Id</option>
                <option @(ViewBag.mod.SearchBy == "FirstName" ? "selected" : "") value="FirstName">FirstName</option>
                <option @(ViewBag.mod.SearchBy == "LastName" ? "selected" : "") value="LastName">LastName</option>
                <option @(ViewBag.mod.SearchBy == "Age" ? "selected" : "") value="Age">Age</option>
                <option @(ViewBag.mod.SearchBy == "Position" ? "selected" : "") value="Position">Position</option>
            </select>
            <input type="text" name="searchValue" value="@ViewBag.mod.SearchValue" class="form-control mr-2" />
            <input type="submit" value="Search" class="btn btn-danger">
        </div>
    </div>
    <div class="btn-a">
        <a href="/Home/Edit">+ Add</a>
    </div>
    <div class="table-div">
        <table class="myTable table table-striped">
            <tr>
                <th>
                    ID
                    <div class="btn-group">
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=ascId&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-up"></i></a>
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=descId&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </th>
                <th>
                    <label>First Name</label>
                    <div class="btn-group">
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=ascFirst&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-up"></i></a>
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=descFirst&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </th>
                <th>
                    Last Name
                    <div class="btn-group">
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=ascLast&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-up"></i></a>
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=descLast&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </th>
                <th>
                    Age
                    <div class="btn-group">
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=ascAge&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-up"></i></a>
                        <a href="/Home/Index/?searchBy=@ViewBag.mod.SearchBy&searchValue=@ViewBag.mod.SearchValue&orderBy=descAge&page=@ViewBag.mod.Page" class="btn"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </th>
                <th>Control</th>
            </tr>
            @foreach (var emp in Model.Employees)
            {
                <tr class="mytr" onclick="location.href = '/Home/Details/@emp.Id'">
                    <td>@emp.Id</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Age</td>
                    <td>
                        <a href="/Home/Edit/@emp.Id" class="btn btn-danger">Edit</a>
                        <a href="/Home/Remove/@emp.Id" data-target="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </table>

        <div class="btn-group">
             @Pagination.PageLinks(Model.PageInfo, ViewBag.mod)
        </div>
    </div>
</form>