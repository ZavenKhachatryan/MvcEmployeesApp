@model IQueryable<MyModels.Employee>
@{
    ViewBag.Title = "ByName";
}

<form method="get" class="search-form">
    <div class="search-bar-with-label">
        <label class="search-label">Search By</label>
        <div class="search-bar">
            <select id="Employees" name="searchBy" class="mySelect custom-select mr-2">
                <option @(ViewBag.mod.SearchBy == "Id" ? "selected" : "") value="Id">Id</option>
                <option @(ViewBag.mod.SearchBy == "FirstName" ? "selected" : "") value="FirstName">FirstName</option>
                <option @(ViewBag.mod.SearchBy == "LastName" ? "selected" : "") value="LastName">LastName</option>
                <option @(ViewBag.mod.SearchBy == "Age" ? "selected" : "") value="Age">Age</option>
                <option @(ViewBag.mod.SearchBy == "Position" ? "selected" : "") value="Position">Position</option>
            </select>
            <input type="text" name="searchValue" value="@ViewBag.mod.SearchValue" class="form-control mr-2" />
            <input type="submit" value="Search" class="btn btn-danger">
        </div>
    </div>
    <div class="btn-a">
        <a href="/Home/Edit">+ Add</a>
    </div>
    <div class="table-div">
        <table class="myTable table table-striped">
            <tr>
                <th>
                    ID
                    <div class="btn-group">
                        <button name="OrderBy" value="ascId" class="btn"><i class="fa fa-chevron-up"></i></button>
                        <button name="OrderBy" value="descId" class="btn"><i class="fa fa-chevron-down"></i></button>
                    </div>
                </th>
                <th>
                    <label>First Name</label>
                    <div class="btn-group">
                        <button name="OrderBy" value="ascFirst" class="btn"><i class="fa fa-chevron-up"></i></button>
                        <button name="OrderBy" value="descFirst" class="btn"><i class="fa fa-chevron-down"></i></button>
                    </div>
                </th>
                <th>
                    Last Name
                    <div class="btn-group">
                        <button name="OrderBy" value="ascLast" class="btn"><i class="fa fa-chevron-up"></i></button>
                        <button name="OrderBy" value="descLast" class="btn"><i class="fa fa-chevron-down"></i></button>
                    </div>
                </th>
                <th>
                    Age
                    <div class="btn-group">
                        <button name="OrderBy" value="ascAge" class="btn"><i class="fa fa-chevron-up"></i></button>
                        <button name="OrderBy" value="descAge" class="btn"><i class="fa fa-chevron-down"></i></button>
                    </div>
                </th>
                <th>Control</th>
            </tr>
            @foreach (var emp in Model)
            {
                <tr class="mytr" onclick="location.href = '/Home/Details/@emp.Id'">
                    <td>@emp.Id</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Age</td>
                    <td>
                        <a href="/Home/Edit/@emp.Id" class="btn btn-danger">Edit</a>
                        <a href="/Home/Remove/@emp.Id" data-target="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>