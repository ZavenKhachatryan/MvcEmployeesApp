@model MyModels.Employee
@{
    ViewBag.Title = "Edit";
}
<div>
    <form method="post">
        <div class="edit">
            <label>FirstName</label><br>
            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control mr-2" />

            <label>LastName</label><br>
            <input type="text" name="LastName" value="@Model.LastName" class="form-control mr-2" />

            <label>Age</label><br>
            <input type="number" name="Age" value="@Model.Age" class="form-control mr-2" />

            <label>Salary</label><br>
            <input type="text" name="Salary" value="@Model.Salary" class="form-control mr-2" />

            <label>Email</label><br>
            <input type="text" name="Email" value="@Model.Email" class="form-control mr-2" />

            <label>Phone</label><br>
            <input type="text" name="Phone" value="@Model.Phone" class="form-control mr-2" />
        </div>
        <p class="errMessage">@ViewBag.ErrMessage</p>
        <p class="completeMessage">@ViewBag.completeMessage</p>

        <input type="@(ViewBag.btn == "Go Back" ? "submit" : "hidden")" value="Submit" class="btn btn-primary" />

        <a href="/Home/Index" class="btn  @(ViewBag.btn == "Go Back" ? "btn-danger" : "btn-success")">@ViewBag.btn</a>
    </form>
</div>