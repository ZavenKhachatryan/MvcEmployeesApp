@model MvcEmployeesApp.Models.Employee
@{
    ViewBag.Title = "AddEdit";
}
<div>
    <form method="post">
        <label>FirstName</label><br>
        <input type="text" name="FirstName" value="@Model.FirstName" /><br>

        <label>LastName</label><br>
        <input type="text" name="LastName" value="@Model.LastName" /><br>

        <label>Age</label><br>
        <input type="number" name="Age" value="@Model.Age" /><br>

        <label>Position</label><br>
        <input type="text" name="Position" value="@Model.Position" /><br>

        <input type="submit" value="Submit" />
        <p>@ViewBag.Message</p>
    </form>
</div>